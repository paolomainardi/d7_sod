}

/**
 * Implements hook_variable_info().
 */
function sod_sessions_variable_info($options) {
  $variables['sod_conference_info_page'] = array(
    'type' => 'string',
    'title' => t('Node informations page', array(), $options),
    'default' => 'node/116',
    'description' => t('Relative node url information conference page (ex: node/116).', array(), $options),
    'required' => TRUE,
    'group' => 'sod_sessions',
  );
  return $variables;
}
